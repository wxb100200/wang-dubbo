<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3">

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
            <!-- caseSensitive默认false，当数据库表名区分大小写时，可以将该属性设置为true -->
            <property name="caseSensitive" value="false"/>
        </plugin>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/wang-ssm?characterEncoding=utf-8"
                        userId="root"
                        password="">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.base.dubbo.model"
                                targetProject="D:\\project\\wang-dubbo\\api\\src\\main\\java"/>

        <sqlMapGenerator targetPackage="mapper"
                         targetProject="D:\\project\\wang-dubbo\\service\\src\\main\\resources"/>

        <javaClientGenerator targetPackage="com.base.dubbo.mapper"
                             targetProject="D:\\project\\wang-dubbo\\service\\src\\main\\java" type="XMLMAPPER" />

        <!--<table tableName="bas_user" domainObjectName="BasUser"></table>-->
        <table tableName="bas_account" domainObjectName="BasAccount"></table>
        <table tableName="bas_config" domainObjectName="BasConfig"></table>
        <table tableName="bas_config_param" domainObjectName="BasConfigParam"></table>
        <table tableName="bas_login" domainObjectName="BasLogin"></table>
        <table tableName="bas_user_info" domainObjectName="BasUserInfo"></table>

      </context>
  </generatorConfiguration>